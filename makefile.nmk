PKGROOT = .
include $(PKGROOT)/blake2s.nmk

.CLOBBER. += b2stest quadlets \
	$(PWD:L=*.(adt|ali|dpc|fdl|lst|o|rep|rls|sdp|siv|slg|sli|vcg|zlg|stderr|stdout)) \
	$("blake2s":L<=!(blake2s.rlu):D=blake2s:B:S)

blake2s.sum : .FORCE spark.smf
	spark @$(*)
	sparksimp
	isabelle build -D . -e
	pogs

adactl : .VIRTUAL .FORCE $(PKGROOT)/blake2sn.aru
	$(RM) -f *.a *.ali *.o
	for i in b2ssum/*.adb b2stest/*.adb; do
		gnatmake -I$(PKGROOT)/common -I$(PKGROOT)/generic -gnatk8 -gnatct -q ${i}
		adactl -e -x -f $(*) -r \
			$$(echo ${i} | sed -e 's:.*/::' -e 's:.ad[bs]:.adt:')
	done
	$(RM) -f *.adt *.ali

adactl.old : .VIRTUAL .FORCE $(PKGROOT)/blake2so.aru
	$(RM) -f *.a *.ali *.o
	for i in b2ssum/*.adb b2stest/*.adb; do
		gnatmake -I$(PKGROOT)/common -I$(PKGROOT)/generic -gnatk8 -gnatct -q ${i}
		adactl -e -x -f $(*) -r \
			$$(echo ${i} | sed -e 's:.*/::' -e 's:.ad[bs]:.adt:')
	done
	$(RM) -f *.adt *.ali

clean : .VIRTUAL .FORCE
	$(RM) -f blake2s/*.prv
	sparkclean -examiner -simplifier
